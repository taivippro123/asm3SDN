<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <h1 class="mb-0">Teams</h1>
    </div>
    <% if (user && user.isAdmin) { %>
        <div class="col-md-6 text-end">
            <form action="/teams" method="POST" class="d-flex justify-content-end align-items-center gap-2">
                <input type="text" name="teamName" class="form-control" placeholder="New Team Name" required style="max-width: 200px;">
                <button type="submit" class="btn btn-primary">Add Team</button>
            </form>
        </div>
    <% } %>
</div>
<div class="horizontal-scroll py-2">
    <% if (teams.length === 0) { %>
        <div>
            <p class="text-muted">No teams found. Please add some teams.</p>
        </div>
    <% } %>
    <% teams.forEach(team => { %>
        <div class="team-card card h-100 shadow-sm mx-2" style="min-width: 220px; max-width: 220px;">
            <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title mb-3"><%= team.teamName %></h5>
                <a href="/teams/<%= team._id %>" class="btn btn-outline-primary btn-sm mt-auto">View Details</a>
            </div>
        </div>
    <% }); %>
</div>
<style>
.horizontal-scroll {
    display: flex;
    flex-direction: row;
    overflow-x: auto;
    gap: 24px;
    padding-bottom: 8px;
    scroll-snap-type: x mandatory;
}
.team-card {
    flex: 0 0 auto;
    scroll-snap-align: start;
    transition: transform 0.18s;
}
.team-card:hover {
    transform: translateY(-6px) scale(1.03);
    box-shadow: 0 8px 32px #0002;
}
</style>