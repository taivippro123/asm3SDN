<div class="row g-4">
    <div class="col-lg-7">
        <div class="card shadow-sm mb-4">
            <div class="row g-0 align-items-center">
                <div class="col-md-5 text-center p-3">
                    <img src="<%= player.image %>" class="img-fluid rounded" alt="<%= player.playerName %>" style="max-height:260px;object-fit:contain;">
                    <% if (player.isCaptain) { %>
                        <span class="d-inline-block mt-3 px-3 py-1 bg-warning text-dark rounded-pill fw-bold" style="font-size:1em;">Captain</span>
                    <% } %>
                </div>
                <div class="col-md-7 p-4">
                    <h2 class="mb-2"><%= player.playerName %></h2>
                    <div class="mb-2"><strong>Team:</strong> <%= player.team.teamName %></div>
                    <div class="mb-2"><strong>Cost:</strong> $<%= player.cost.toLocaleString() %></div>
                    <div class="mb-2"><strong>Information:</strong> <%= player.information %></div>
                    <% if (user && user.isAdmin) { %>
                        <div class="mt-3">
                            <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#editPlayerModal">Edit Player</button>
                            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deletePlayerModal">Delete Player</button>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white border-bottom-0">
                <h4 class="mb-0">Comments</h4>
            </div>
            <div class="card-body">
                <% if (user) { %>
                    <form action="/players/<%= player._id %>/comments" method="POST" class="mb-4">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-3">
                                <label class="form-label">Rating</label>
                                <select class="form-select" name="rating" required>
                                    <option value="1">1 Star</option>
                                    <option value="2">2 Stars</option>
                                    <option value="3">3 Stars</option>
                                </select>
                            </div>
                            <div class="col-md-7">
                                <label class="form-label">Comment</label>
                                <textarea class="form-control" name="content" required rows="1"></textarea>
                            </div>
                            <div class="col-md-2 d-grid">
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </div>
                    </form>
                <% } %>
                <% if (player.comments.length > 0) { %>
                    <% player.comments.forEach(comment => { %>
                        <div class="card mb-3 border-0 bg-light">
                            <div class="card-body py-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="fw-bold"><%= comment.author.name %></span>
                                        <% for(let i = 0; i < comment.rating; i++) { %>
                                            <i class="fas fa-star text-warning"></i>
                                        <% } %>
                                    </div>
                                    <small class="text-muted">
                                        <%= new Date(comment.createdAt).toLocaleDateString() %>
                                    </small>
                                </div>
                                <div class="mt-1"><%= comment.content %></div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-muted">No comments yet.</p>
                <% } %>
            </div>
        </div>
        <% if (typeof otherPlayers !== 'undefined' && otherPlayers.length > 0) { %>
        <div class="mb-4">
            <h5 class="mb-3">Other Players</h5>
            <div class="horizontal-scroll py-2">
                <% otherPlayers.forEach(p => { %>
                    <div class="player-card card h-100 shadow-sm position-relative mx-2" style="min-width: 220px; max-width: 220px;">
                        <% if (p.isCaptain) { %>
                            <span class="position-absolute top-0 end-0 m-2 px-3 py-1 bg-warning text-dark rounded-pill fw-bold" style="font-size:0.95em;">Captain</span>
                        <% } %>
                        <img src="<%= p.image %>" class="card-img-top" alt="<%= p.playerName %>" style="object-fit:contain;max-height:120px;">
                        <div class="card-body">
                            <h6 class="card-title mb-1"><%= p.playerName %></h6>
                            <div class="mb-2">
                                <strong>Team:</strong> <%= p.team.teamName %><br>
                                <strong>Cost:</strong> $<%= p.cost.toLocaleString() %>
                            </div>
                            <a href="/players/<%= p._id %>" class="btn btn-outline-primary btn-sm">View</a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <% } %>
        <style>
        .horizontal-scroll {
            display: flex;
            flex-direction: row;
            overflow-x: auto;
            gap: 24px;
            padding-bottom: 8px;
            scroll-snap-type: x mandatory;
        }
        .player-card {
            flex: 0 0 auto;
            scroll-snap-align: start;
            transition: transform 0.18s;
        }
        .player-card:hover {
            transform: translateY(-6px) scale(1.03);
            box-shadow: 0 8px 32px #0002;
        }
        </style>
    </div>
</div>
<% if (user && user.isAdmin) { %>
    <!-- Edit Player Modal -->
    <div class="modal fade" id="editPlayerModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Player</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/players/<%= player._id %>?_method=PUT" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Player Name</label>
                            <input type="text" class="form-control" name="playerName" value="<%= player.playerName %>" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Image URL</label>
                            <input type="url" class="form-control" name="image" value="<%= player.image %>" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Cost</label>
                            <input type="number" class="form-control" name="cost" value="<%= player.cost %>" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Team</label>
                            <select class="form-select" name="team" required>
                                <option value="<%= player.team._id %>" selected><%= player.team.teamName %></option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Information</label>
                            <textarea class="form-control" name="information" required><%= player.information %></textarea>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" name="isCaptain" id="isCaptain" <%= player.isCaptain ? 'checked' : '' %>>
                            <label class="form-check-label" for="isCaptain">Is Captain</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Delete Player Modal -->
    <div class="modal fade" id="deletePlayerModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Player</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this player?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/players/<%= player._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
<% } %> 